\newcommand{\FermiProb}{
\begin{equation}
\label{Eq:FermiFunction}
f(E) = \frac{1}{{1 + {e^{\left( {E - {E_F}} \right)/kT}}}}
\end{equation}
}
\newcommand{\HoleProb}
{
\begin{equation}
\label{Eq:HoleProb}
1-f(E)= 1 - \frac{1}{{1 + {e^{\left( {E - {E_F}} \right)/kT}}}}
\end{equation}
}
\newcommand{\ConductionDensityofStates}
{
\begin{equation}
\label{Eq:Nc}
{N_c}=2\left[  {{\frac{{2\pi {m_n}kT}}{{{h^2}}}} } \right]  ^{3/2}
\end{equation}
}
\newcommand{\ValenceDensityofStates}
{
\begin{equation}
\label{Eq:Nv}
{N_v}=2\left[  {{\frac{{2\pi {m_p}kT}}{{{h^2}}}} } \right]  ^{3/2}
\end{equation}
}
\newcommand{\nDensityofStates}
{
\begin{equation}
\label{Eq:nNc}
n = {N_c}{e^{ - ({E_c} - {E_f})/kT}}
\end{equation}
}
\newcommand{\pDensityofStates}
{
\begin{equation}
\label{Eq:pNc}
p = {N_v}{e^{ - ({E_f} - {E_v})/kT}}
\end{equation}
}
\newcommand{\nni}
{
\begin{equation}
\label{Eq:nni}
n = {n_i}{e^{\left( {{E_F} - {E_i}} \right)/kT}} \equiv {n_i}{e^{ - {\phi _B}/kT}}
\end{equation}
}
\newcommand{\pni}
{
\begin{equation}
\label{Eq:pni}
p = {n_i}{e^{\left( {{E_i} - {E_F}} \right)/kT}} \equiv {n_i}{e^{{\phi _B}/kT}}
\end{equation}
}
\newcommand{\EiminEf}
{
\begin{equation}
\label{Eq:EiminEf}
E_i-E_f=kT\ln\left( \frac{p}{n_i}\right)
\end{equation}
}
\newcommand{\EfminEi}
{
\begin{equation}
\label{Eq:EfminEi}
E_f-E_i=kT\ln\left( \frac{n}{n_i}\right)
\end{equation}
}
\newcommand{\massaction}
{
\begin{equation}
\label{Eq:MassAction}
np = {N_c}{N_v}e^{- E_g/kT} = n_i^2
\end{equation}
}
\newcommand{\niFormal}
{
\begin{equation}
\label{Eq:niFormal}
n_i=\sqrt{N_c N_v}e^{-E_g/2kT}
\end{equation}
}
