\newcommand{\chargedensity}
{
\begin{equation}
\label{Eq:chargedensity}
\rho = q\left( {p - n + {N_D} - {N_A}} \right)
\end{equation}
}
\newcommand{\currentdensity}
{
\begin{equation}
\label{Eq:currentdensity}
J = \frac{I}{Area}
