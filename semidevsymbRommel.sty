\newcommand{\ExcessCarriers}
{
\begin{subequations}
\begin{equation}
\label{Eq:excesselectron}
n^{\prime}(x) = n_{p0}  \left(e^{qV_a/kT} - 1\right) e^{  \left(  x_p + x \right)/L_n},\mbox{           }x < - x_p
\end{equation}
\begin{equation}
\label{Eq:Eqexcesshole}
p^{\prime}(x) = p_{n0} \left(e^{qV_a/kT} - 1\right) e^{ - \left( x - x_n \right) /L_p},\mbox{           }x > x_n
\end{equation}
\end{subequations}
}
\newcommand{\StoredCharge}
{
	\begin{subequations}
	\begin{equation}
	\label{Eq:ElecStoredCharge}
	{Q_n}^{\prime}=-q\int_{-\infty}^{-x_p}{n^{\prime}\left(x^{\prime}\right)dx^{\prime}}
	\end{equation}
	\begin{equation}
	\label{Eq:HoleStoredCharge}
	{Q_p}^{\prime}=q\int_{x_n}^{\infty}{p^{\prime}\left(x^{\prime}\right)dx^{\prime}}
	\end{equation}	
	\end{subequations}
}
\newcommand{\IdealDiode}
{
\begin{subequations}
\begin{equation}
\label{Eq:Izero}
I_0=qA\left(\frac{n_i^2}{N_A}\left(\frac{D_n}{L_n}\right)+\frac{n_i^2}{N_D}\left(\frac{D_p}{L_p}\right)\right)
\end{equation}
\begin{equation}
\label{Eq:idealdiode}
I_d=I_0\left( \exp{\left(\frac{qV_a}{kT}\right)}-1\right)
\end{equation}
\end{subequations}
}
\newcommand{\IGR}
{
\begin{equation}
\label{Eq:IGR}
I_{R - G} = \frac{q n_i W}{\tau_{dep}} \left(  \exp{\left(\frac{qV_a}{2kT}\right)} -1 \right)
\end{equation}
}
\newcommand{\DiodeConductance}
{
\begin{subequations}
\begin{equation}
\label{Eq:DiodeConductance}
g_d = \frac{\partial I_d}{\partial V_a}=\frac{q}{kT} I_0 \exp{ \frac{qV_a}{kT}}
\end{equation}
\begin{equation}
\label{Eq:DiodeConductance}
r_d =\frac{1}{g_d}=\left[ \frac{q}{kT} I_0 \exp{ \frac{qV_a}{kT}}\right]^{-1}
\end{equation}
\end{subequations}
}
\newcommand{\JunctionCapacitance}
{
\begin{equation}
\label{Eq:JunctionCapacitance}
C_{Depletion}=C_{junction}=\frac{\varepsilon_s \varepsilon_0 A}{W}
\end{equation}
}
\newcommand{\DiffusionCapacitance}
{
\begin{equation}
\label{Eq:DiffusionCapacitance}
C_{Diffusion}=\left( \tau_n I_{n0}+\tau_p I_{p0} \right) \frac{q}{kT} \exp{\frac{qV_a}{kT}}=qA\frac{q}{kT} \left(\tau_n\frac{D_n}{L_n}n_{p0}+\tau_p\frac{D_p}{L_p}p_{n0}\right)\exp{\frac{qV_a}{kT}}
\end{equation}
}
\newcommand{\SemiconductorWorkFunction}
{
\begin{equation}
\label{Eq:PhiS}
\Phi _s= \left(\chi+ \left.\left(E_c-E_{f_s}\right)\right|_{Flatband}  \right)%{\chi  + \left. (E_c - E_{f_s}} \right|_{Flat Band}}}
\end{equation}
}
\newcommand{\MetalSemiconductorWorkFunction}
{
\begin{equation}
\label{Eq:MetalSemicondcutorWorkFucntion}
\phi_{ms}\mbox{ (general)}=\Phi_m-\left( \chi+\frac{E_g}{2}+\phi_B \right)
\end{equation}
}
\newcommand{\Cinsulator}
{
\begin{equation}
\label{Eq:Cinsulator}
C_{insulator}=\frac{\varepsilon_{insulator}\varepsilon_0}{t_{insulator}}
\end{equation}
}
\newcommand{\BulkFermi}
{
\begin{equation}
\label{Eq:BulkFermi}
\phi_B=
\begin{cases}
+\dfrac{kT}{q}\ln\dfrac{N_A}{n_i}&\mbox{p-type substrate}\\
-\dfrac{kT}{q}\ln\dfrac{N_D}{n_i}&\mbox{n-type substrate}\\
\end{cases}
\end{equation}
}
\newcommand{\Wm}
{
\begin{equation}
\label{Eq:Wm}
W_m=\begin{cases}
\sqrt{\dfrac{2\varepsilon_s \varepsilon_0 \vert 2 \phi_B \vert}{qN_A}} &\mbox{p-type substrate}\\
\sqrt{\dfrac{2\varepsilon_s \varepsilon_0 \vert 2 \phi_B \vert}{qN_D}} &\mbox{n-type substrate}\\
\end{cases}
\end{equation}
}
\newcommand{\Qd}
{
\begin{equation}
\label{Eq:Qd}
Q_d=\begin{cases}
-qN_AW_m&\mbox{p-type substrate}\\
+qN_DW_m&\mbox{n-type substrate}\\
\end{cases}
\end{equation}
}
\newcommand{\Vtideal}
{
\begin{equation}
\label{Eq:Vtideal}
V_{tideal}=-\frac{Q_s}{C_{insulator}}+2\phi_B
\end{equation}
}
\newcommand{\WorkFuncNPlusPoly}
{
\begin{equation}
\label{Eq:WorkFuncNPlusPoly}
\phi_{ms}\mbox{ (N+ Polysilicon)}\approx -\frac{E_g}{2}-\phi_B=-0.56\mbox{ eV}-\phi_B
\end{equation}
}
\newcommand{\WorkFuncPPlusPoly}
{
\begin{equation}
\label{Eq:WorkFuncPPlusPoly}
\phi_{ms}\mbox{ (P+ Polysilicon)}\approx \frac{E_g}{2}-\phi_B=0.56\mbox{ eV}-\phi_B
\end{equation}
}
\newcommand{\Qox}
{
\begin{equation}
\label{Eq:Qox}
Q_{ox}=qD_{ox}
\end{equation}
}
\newcommand{\Vfb}
{
\begin{equation}
\label{Eq:Vfb}
V_{fb}=\phi_{ms}-\frac{Q_{ox}}{C_{insulator}}
\end{equation}
}
\newcommand{\Vt}
{
\begin{equation}
\label{Eq:Vt}
V_t=V_{tideal}+V_{fb}=-\frac{Q_s}{C_{insulator}}+2\phi_B+\phi_{ms}-\frac{Q_{ox}}{C_{insulator}}
\end{equation}
}
\newcommand{\BodyEffect}
{
\begin{equation}
\label{Eq:BodyEffect}
m=1+\frac{\sqrt{\dfrac{\varepsilon_s\varepsilon_0qN_A}{4\phi_B}}}{C_{inslator}}=1+\frac{C_{dm}}{C_{insulator}}=1+\frac{3t_{insulator}}{W_m}
\end{equation}
}
\newcommand{\Vdsat}
{
\begin{subequations}
\begin{equation}
\label{Eq:Vdsat}
V_{DS_{sat}}=\frac{V_{GS}-V_t}{m}
\end{equation}
\begin{equation}
\label{Eq:VdsatCases}
\mbox{If }V_{DS_{sat}} \begin{cases}
<\dfrac{V_{GS}-V_t}{m}&\mbox{ Linear}\\
=\dfrac{V_{GS}-V_t}{m}&\mbox{ Pinchoff}\\
>\dfrac{V_{GS}-V_t}{m}&\mbox{ Saturation}\\
\end{cases}
\end{equation}
\end{subequations}
}
\newcommand{\Ids}
{
\begin{subequations}
\begin{equation}
\label{Eq:IdsLinear}
I_{DS}\mbox{ (Linear)}=\overline{\mu}_n\frac{Z}{L}C_{insulator}\left[\left(V_{GS}-V_t\right)V_{DS}-\frac{m}{2}{V_{DS}}^2\right]
\end{equation}
\begin{equation}
\label{Eq:IdsSaturation}
I_{DS}\mbox{ (Saturation)}=\overline{\mu}_n\frac{Z}{L}C_{insulator}\frac{\left( V_{GS}-V_t\right)^2}{2m}
\end{equation}
\end{subequations}
}
\newcommand{\gm}
{
\begin{equation}
\label{Eq:gm}
g_m=\frac{\partial I_{DS}}{V_{GS}}\Big|_{\mbox{Constant $V_{DS}$}}
\end{equation}

}
