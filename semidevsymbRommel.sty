}
\newcommand{\conductivity}
{
\begin{subequations}
\begin{equation}
\label{Eq:conductivitytotal}
\sigma  = q\left( {\mu _n}n + {\mu _p}p \right)
\end{equation}
\begin{equation}
\label{Eq:conductivityn}
\sigma_n  = q\left( {\mu _n}n \right)
\end{equation}
\begin{equation}
\label{Eq:conductivityp}
\sigma_p = q\left( {\mu _p}p \right)
\end{equation}
\end{subequations}
}
\newcommand{\resistivity}
{
\begin{equation}
\label{Eq:resistivity}
\rho=\frac{1}{\sigma}
\end{equation}
}
\newcommand{\resistance}
{
\label{Eq:resistance}
\begin{equation}
R=\rho\frac{L}{Wt}
\end{equation}
}
\newcommand{\driftcurrent}
{
\begin{subequations}
\begin{equation}
\label{Eq:driftcurrent}
{J_{drift}}=\sigma \mathcal{E}=\left(\sigma_n+\sigma_p\right)\mathcal{E}
\end{equation}
\begin{equation}
\label{Eq:driftcurrentn}
{J_{drift_n}}=\sigma_n \mathcal{E}
\end{equation}
\begin{equation}
\label{Eq:driftcurrentp}
{J_{drift_p}}=\sigma_p \mathcal{E}
\end{equation}
\end{subequations}
}
\newcommand{\Einstein}
{
\begin{subequations}
\begin{equation}
\label{Eq:Einsteinelec}
\frac{D_n}{\mu _n} = \frac{kT}{q}
\end{equation}
\begin{equation}
\label{Eq:Einsteinhole}
\frac{D_p}{\mu _p} = \frac{kT}{q}
\end{equation}
\end{subequations}
}
\newcommand{\diffusionlength}
{
\begin{subequations}
\begin{equation}
\label{Eq:Ln}
L_n \equiv \sqrt {{D_n}{\tau _n}} 
\end{equation}
\begin{equation}
\label{Eq:Lp}
L_p = \sqrt {{D_p}{\tau _p}} 
\end{equation}
\end{subequations}
}
\newcommand{\diffusioncurrent}
{
\begin{subequations}
\begin{equation}
\label{Eq:diffusion}
J_{Diffusion}=qD_n \frac{dn}{dx}-qD_p \frac{dp}{dx}
\end{equation}
\begin{equation}
\label{Eq:elecdiffusion}
{J_{Diffusion_n}} =  - \left( { - q} \right){D_n}\frac{dn}{dx} = q{D_n}\frac{dn}{dx}
\end{equation}
\begin{equation}
\label{Eq:holediffusion}
{J_{Diffusion_p}} =  - \left( { + q} \right){D_p}\frac{dp}{dx} =  - q{D_p}\frac{dp}{dx}
\end{equation}
\end{subequations}
}
\newcommand{\Poisson}
{
\begin{subequations}
\begin{equation}
\label{Eq:PoissonGradient}
 - {\nabla ^2} \cdot\vec{ V} = \nabla  \cdot \vec{\mathcal{E} }= \frac{\rho }{\varepsilon _S\varepsilon _0}
\end{equation}
\begin{equation}
\label{Eq:OneDPoisson}
\frac{d^2V}{dx^2}=-\frac{d\mathcal{E}}{dx}=-\frac{\rho}{\varepsilon_s\varepsilon_0}
\end{equation}
\end{subequations}
}
\newcommand{\DeplApprox}
{
\begin{equation}
\label{Eq:DeplApprox}
\rho  =  \begin{cases}
- qN_A^ - &-x_p \le x \le 0\\
qN_D^ + &0 \le x \le x_n\\
0&{\mbox{otherwise}}
\end{cases} 
\end{equation}
}
\newcommand{\EfieldStepJunction}
{
\begin{equation}
\label{Eq:EFieldStepJunction}
\mathcal{ E} =  \begin{cases}
 - \dfrac{qN_A^ - }{\varepsilon _s \varepsilon _0} \left( x + x_p \right) & { - x_p \le x \le 0}\\
\dfrac{qN_D^ +}{\varepsilon _s \varepsilon _0} \left( x_n - x \right)&0 \le x \le x_n\\
0 & \mbox{otherwise}
\end{cases} 
\end{equation}
}
\newcommand{\EmaxStepJunction}
{
\begin{equation}
\label{Eq:EmaxStepJunction}
\vert \mathcal{E}_{max} \vert=\frac{qN_Ax_p}{\varepsilon_s\varepsilon_0}=\frac{qN_Dx_n}{\varepsilon_s\varepsilon_0}
\end{equation}
}
\newcommand{\PotentialStepJunction}
{
\begin{equation}
\label{Eq:PoissonStepJunction}
V=\begin{cases}
\dfrac{qN_A}{2\varepsilon_s \varepsilon_0} \left(x+x_p \right)^2 & -x_p \le x \le 0 \\
\phi_{bi}-\dfrac{qN_D}{2\varepsilon_s \varepsilon_0}\left(x_n-x\right)^2 & 0 \le x \le x_n\\
\end{cases} 
\end{equation}
}
\newcommand{\BuiltinPotential}
{
\begin{equation}
\label{Eq:BuiltinPotential}
\phi_{bi} = \frac{kT}{q} \ln \left( \frac{N_A N_D}{n_i^2} \right)
\end{equation}
}
\newcommand{\WStepJunction}
{
\begin{equation}
\label{Eq:WStepJunction}
W=\sqrt{ \frac{2 \varepsilon_s \varepsilon_0}{q} \left( \frac{1}{N_A}+\frac{1}{N_D} \right) \left( \phi_{bi}- V_a \right)
}
\end{equation}
}
\newcommand{\xpandxn}
{
\begin{subequations}
\begin{equation}
\label{Eq:xpBig}
x_p=\sqrt{\frac{2\varepsilon_s\varepsilon_0}{q}\left[ \frac{N_D}{N_A\left(N_A+N_D\right)}\right]\phi_{bi}}
\end{equation}
\begin{equation}
\label{Eq:xpRatio}
x_p = W\frac{N_D}{N_A + N_D} 
\end{equation}
\begin{equation}
\label{Eq:xnBig}
x_n=\sqrt{\frac{2\varepsilon_s\varepsilon_0}{q}\left[ \frac{N_A}{N_D\left(N_A+N_D\right)}\right]\phi_{bi}}
\end{equation}
\begin{equation}
\label{Eq:xnRatio}
x_n = W\frac{N_A}{N_A + N_D} 
\end{equation}
\end{subequations}
}
